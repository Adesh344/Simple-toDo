<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style/style.css">
</head>
<body>
    <h2 style="text-align: center;">To-do App</h2>
    <form id="message" method="post">
        <input type="text" placeholder="Enter A task here" name="message" class="message"/>
        <button type="submit" style="background-color: rgba(27, 27, 252, 0.9); color: white;">Save</button>
    </form>

    
    <% for(let i=0 ; i < name.length ; i++){ %>
        
        <h2 class="dataItem"><%=i+1 %>&nbsp; <%= name[i] %> </h2>
    <% }  %>

    <div class="table-wrapper" style="width: 200px; 
    height: 200px;
    background-color: lightgray; 
    margin: 0 auto; ">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>No.</th>
              <th>Todo item</th>
              <th>status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr
              ng-repeat="task in tasks"
              class="{{ task.status ? 'table-success' : 'table-light' }}"
            >
              <td>{{ $index + 1 }}</td>
              <td class="{{ task.status ? 'complete' : 'task' }}">
                {{ task.task_name }}
              </td>
              <td>{{ task.status ? "Completed" : "In progress" }}</td>
              <td>
                <button class="btn btn-danger" ng-click="delete($index)">
                  Delete
                </button>
                <button class="btn btn-success" ng-click="finished($index)">
                  Finished
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>


      <script>

        

      </script>

</body>
</html>